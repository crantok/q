}

/**
 * Implements hook_mail()
 */
function import_auction_mail( $key, &$message, $params ) {
  switch ( $key ) {
    case 'bid_made':

      $message['subject'] = $params['site_name'] .
        ' website: Bid made on lot number ' . $params['lot_number'];

      $message['body'][] = 'A bid was made on the ' . $params['site_name'] .
        " website. Here are the details:\n\n" .
        'User: ' . $params['user_login'] . "\n" .
        'Link to user: ' . $params['user_page'] . "\n" .
        'Lot number: ' . $params['lot_number'] . "\n" .
        'Link to lot: ' . $params['lot_page'] . "\n" .
        'Bid amount: £' . $params['bid_amount'] . "\n" .
        'Bit time: ' . $params['bid_time']
      ;
        
      break;
  }
  dsm( $message );
}

