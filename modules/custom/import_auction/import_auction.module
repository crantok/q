function _import_auction_bid_page_title( $auction, $lot ) {
  return t(
    'Bid on lot @lot_number in auction @auction_number. Auction ends @end_time.',
    array(
      '@lot_number' => $lot->title,
      '@auction_number' => $auction->title,
      '@end_time' => format_date(
        strtotime( $auction->field_auction_end_time[0]['value'] ),
        'large'
      ),
    )
  );
}

function _import_auction_bid_page( $auction, $lot ) {

//  return node_view( $lot, false, false, false ); // to much crap, inc title.
//  return '<br/><br/><br/><h1>------------------- TO DO -------------------</h1>';
  
  $page = '';
  $page .= '<div class="bid-page-lot">';
  $page .= '<div class="field-lot-description field-lot-item">';
  $page .= check_plain( $lot->field_lot_description[0]['value'] );
  $page .= '</div>';
  $page .= '<div class="field-lot-category field-lot-item">';
  foreach ( $lot->field_lot_category as $category ) {
    $page .= '<div class="field-lot-category-item">';
    $page .= check_plain( $category['value'] );
    $page .= '</div>';
  }
  $page .= '</div>'; // class="field-lot-category"
  $page .= '<div class="field-lot-price field-lot-item">';
  $page .= check_plain( '£' . $lot->field_lot_price[0]['value'] );
  $page .= '</div>';
  $page .= '</div>'; // class="bid-page-lot"
  
  $page .= drupal_get_form( '_import_auction_bid_form' );
  
  return $page;
}

